rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anonymous uploads to the anonymous_reports folder
    match /anonymous_reports/{fileName} {
      allow create: if request.resource.size < 10 * 1024 * 1024 && // 10MB max
                   (request.resource.contentType.matches('image/.*') || 
                    request.resource.contentType.matches('video/.*'));
      allow read: if request.auth != null && 
                 (request.auth.token.role == 'admin' || request.auth.token.role == 'responder');
      allow delete: if request.auth != null && request.auth.token.role == 'admin';
    }

    // Existing rules...
  }
} 